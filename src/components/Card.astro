---
import { Image } from "astro:assets"
export interface Props {
	title: string
	body: string
	href: string
	thumb?: ImageMetadata
	class?: string
}

const { href, title, body, thumb, class: cls } = Astro.props
const classes = ["link-card"]
if (cls) {
	classes.push(cls)
}
---

<li class={classes.join(" ")}>
	<a href={href}>
		{thumb && <Image src={thumb} alt={title} width={596} class="thumb" />}
		<h2>{title}&nbsp;â€º</h2>
		<p>{body}</p>
	</a>
</li>
<style>
	:root {
		--link-gradient: linear-gradient(45deg, #4f39fa, #da62c4 30%, var(--color-border) 60%);
	}

	.link-card {
		list-style: none;
		display: flex;
		padding: 0.15rem;
		background-image: var(--link-gradient);
		background-size: 400%;
		border-radius: 0.5rem;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 1em 1.3em;
		border-radius: 0.35rem;
		color: var(--text-color);
		/* background-color: rgba(255, 255, 255, 0.333); */
		opacity: 0.8;
	}

	h2 {
		margin: 0;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	p {
		margin-top: 0.75rem;
		margin-bottom: 0;
	}

	h2 span {
		display: inline-block;
		transition: transform 0.3s cubic-bezier(0.22, 1, 0.36, 1);
	}

	.link-card:is(:hover, :focus-within) {
		background-position: 0;
	}

	.link-card:is(:hover, :focus-within) h2 {
		color: var(--color-secondary);
	}

	.link-card:is(:hover, :focus-within) a {
		color: var(--color-inital);
	}

	.link-card:is(:hover, :focus-within) h2 span {
		will-change: transform;
		transform: translateX(2px);
	}

	.thumb {
		width: 80%;
		height: auto;
	}
</style>
