---
import type { MarkdownLayoutProps } from "astro"
import Layout from "./Layout.astro"

type Props = MarkdownLayoutProps<{
	title: string
	date: string
}>

const { frontmatter, url } = Astro.props
---

<Layout title={frontmatter.title} url={url}>
	<slot />
	<style is:global>
		h1 {
			text-align: center;
		}
	</style>
</Layout>
